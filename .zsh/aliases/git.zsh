alias ga="git add $1"
alias gc='git commit -v'
alias gs='git status'
alias gri="git ri $1"
alias grm="git rebase main"
alias gpo="git po"
alias glb="git branch -vv"
alias gdb="git branch -d $1"
alias gco="git checkout $1"
alias gfs="git flow feature start $1"
alias gff="git flow feature finish $1"
alias gbs="git flow bugfix start $1"
alias gbf="git flow bugfix finish $1"
alias grs="git flow release start $1"
alias grf="git flow release finish $1"
alias gp="git push $1"
alias gpr="git branch --merged main | grep -v '^[ *]*main$' | xargs git branch -d"
alias gcw="git add . && git commit -m 'WIP $1' --no-verify"
alias gcf="git add . && git commit -m 'Fixup -> $1' --no-verify"
alias gpf="git push --force"
alias gcp="git cherry-pick $1"
alias grh="git reset HEAD~"
